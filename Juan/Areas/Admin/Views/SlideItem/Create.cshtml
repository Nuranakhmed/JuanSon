
@{
    ViewData["Title"] = "Create";
}
@model SliderCreateVM

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Slide</h4>
            <form class="forms-sample" method="post"   enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputUsername1">Photo</label>
                    <input  asp-for="Photo" class="form-control" >
                    <span asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Title">
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">SubTitle</label>
                    <input asp-for="SubTitle" class="form-control" placeholder="SubTitle">
                    <span asp-validation-for="SubTitle"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputConfirmPassword1">Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Description">
                    <span asp-validation-for="Description"></span>
                </div>
            
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light"  asp-action="Index">Cancel</button>
            </form>
        </div>
    </div>
</div>